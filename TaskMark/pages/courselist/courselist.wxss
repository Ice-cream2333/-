/* pages/courselist/courselist.wxss */
.container {
  height: 100%;
  width: 100%;
}
.empty {
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -120rpx;
  margin-left: -100rpx;  
  height: 40rpx;
  width: 200rpx;
  font-size: 28rpx;
  color: #999999;
}
.item {
  height: 180rpx;
  width: 100%;
  border-bottom: 1px solid #D6D6D6;
}
.media-left, .media-right, .media-body{
  display: table-cell;
  vertical-align: middle;
}
.media-left, .media-right {
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.media-body {
  height: 180rpx;
  width: 10000px;
}
.img-course {
  width: 40rpx;
  height: 40rpx;
  padding: 15px;
  border: 1px solid #999999;
  border-radius: 50%;
  /*box-sizing: border-box;*/
}
.img-right {
  width: 20rpx;
  height: 30rpx;
  /*float: right; */
  /*position: absolute;
  top: 70rpx;
  right: 50rpx;*/
}
.heading {
  display: block;
  font-size: 30rpx;
  color: #000000;
  line-height: 60rpx;
}
.desc {
  display: block;  
  font-size: 26rpx;
  color: #999999;
  line-height: 30rpx;
}
.btn {
  position: fixed;
  width: 100%;
  bottom: 0;
}
.btn-add {
  border-radius: 0;
  background: #6D54FF;
  font-size: 30rpx;
  color: #FFFFFF;
  height: 100rpx;
  line-height: 100rpx;  
}
.other-button-hover {
  opacity: 0.8;
}